{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ES2017", "ESNext.AsyncIterable"],
    "typeRoots": ["node_modules/@types"],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "noImplicitAny": true,
    "isolatedModules": true,
    "pretty": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "allowJs": false,
    "noEmit": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "baseUrl": ".",
    "paths": {
      "~/api/v1/controllers/*": ["src/api/v1/controllers/*"],
      "~/api/v1/middlewares/*": ["src/api/v1/middlewares/*"],
      "~/api/v1/models/*": ["src/api/v1/models/*"],
      "~/api/v1/routes/*": ["src/api/v1/routes/*"],
      "~/api/v1/services/*": ["src/api/v1/services/*"],
      "~/api/configs": ["src/configs/*"],
      "~/api/interfaces/*": ["src/interfaces/*"],
      "~/api/utils/*": ["src/utils/*"],
      "~/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.json", ".env", "src/server.ts"],
  "exclude": ["node_modules", "src/http", "src/logs", "src/tests"]
}
